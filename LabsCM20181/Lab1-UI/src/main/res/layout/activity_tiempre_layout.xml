<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr07_20181.Activities.tiempre_picker"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/flecha_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flecha_arriba"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/text_tiempre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flecha_arriba"
        android:layout_toLeftOf="@id/text_min_tiempre"/>

    <ImageView
        android:id="@+id/flecha_abajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flecha_abajo"
        android:layout_below="@id/text_tiempre"
        android:padding="10dp"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/text_min_tiempre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_min_tiempre"
        android:layout_toRightOf="@id/flecha_abajo"
        android:layout_alignBaseline="@id/text_tiempre"/>
    <Button
        android:id="@+id/bot_tiempre_picker"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_picker_tiempre"
        android:layout_toRightOf="@id/text_min_tiempre"
        android:layout_marginLeft="20dp"

        android:layout_alignBaseline="@id/text_tiempre"
        />
</RelativeLayout>