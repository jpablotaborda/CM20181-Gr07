<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardplatos"
    tools:context="co.edu.udea.compumovil.gr07_20181.Activities.cardplatos">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/platos_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"

            />
        <TextView
            android:id="@+id/lbplato_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_nombre"
            android:layout_below="@id/platos_foto"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/platos_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbplato_nombre"
            android:layout_toRightOf="@id/lbplato_nombre"
            android:layout_alignTop="@id/lbplato_nombre"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/lbplato_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_horario"
            android:layout_below="@id/lbplato_nombre"/>
        <TextView
            android:id="@+id/platos_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbplato_horario"
            android:layout_alignTop="@id/lbplato_horario"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/lbplato_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_tipo"
            android:layout_below="@id/lbplato_horario"/>
        <TextView
            android:id="@+id/platos_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbplato_tipo"
            android:layout_alignTop="@id/lbplato_tipo"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/lbplato_tiempre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_tiempre"
            android:layout_below="@id/lbplato_tipo"/>
        <TextView
            android:id="@+id/platos_tiempre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbplato_tiempre"
            android:layout_alignTop="@id/lbplato_tiempre"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/lbplato_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_precio"
            android:layout_below="@id/lbplato_tiempre"/>
        <TextView
            android:id="@+id/platos_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbplato_precio"
            android:layout_alignTop="@id/lbplato_precio"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/lbplato_ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbplato_ingredientes"
            android:layout_below="@id/lbplato_precio"/>

        <TextView
            android:id="@+id/platos_ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbplato_ingredientes"
            android:layout_alignTop="@id/lbplato_ingredientes"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
